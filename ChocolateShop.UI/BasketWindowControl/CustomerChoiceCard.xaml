<UserControl x:Class="ChocolateShop.UI.BasketWindowControl.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChocolateShop.UI.BasketWindowControl"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid Margin="0,10,0,-10" Background="#FF1D4A7D">
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="216*"/>
        </Grid.RowDefinitions>
        <Label Content="Фото" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center" Height="144" Width="240"></Label>
        <Label Content="Имя клиента" Grid.Row="1" FontSize="36"></Label>
        <Label Content="Все покупки клиента" FontSize="36" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Height="102" Width="400"></Label>
    </Grid>
</UserControl>
