<UserControl x:Class="ChocolateShop.UI.Windows.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChocolateShop.UI.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="Gray" Grid.Row="0" Grid.RowSpan="3" RadiusX="15" RadiusY="15"/>
        <Rectangle Fill="White" Grid.Row="0" Grid.RowSpan="3" Margin="2" RadiusX="15" RadiusY="15"/>
        <Rectangle Fill="Orange" Grid.Row="0" Margin="6" RadiusX="15" RadiusY="15"/>
        <Label Grid.Row="1" Content="Шоколадка" Margin="6 2 2 2" FontFamily="Cascadia Code" FontSize="20"/>
        <Label Grid.Row="1" Content="600 руб." Margin="6 24 2 2" FontFamily="Cascadia Code" FontSize="20"/>
        <Border Grid.Row="2" CornerRadius="15">
            <Button Margin="50 10 50 10" Background="White">
                <Image Source="images\basket_icon.png"/>
            </Button>
        </Border>

    </Grid>
</UserControl>
