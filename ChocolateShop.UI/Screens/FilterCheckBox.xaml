<UserControl x:Class="ChocolateShop.UI.Screens.FilterCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChocolateShop.UI.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Border CornerRadius="2" BorderBrush="Black" BorderThickness="4">
            <Button Name="ButtonEnableFilter" Background="#01000000" Click="ButtonEnableFilter_Click"/>
        </Border>
        <Label Name="LabelFilterName" VerticalContentAlignment="Top" Grid.Column="1" Content="Фильтр" FontWeight="Bold" FontSize="26" Margin="0,-10,30,-7"/>
    </Grid>
</UserControl>
